generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

//datasource db {
//  provider = "sqlite"
//  url      = "file:./dev.db"
//}
datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model Messages {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
